<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BluetoothSample.MainPage">

    <StackLayout>
        <Button Text="Scan for Devices" Clicked="OnScanButtonClicked"/>
        <ListView x:Name="DevicesListView" ItemsSource="{Binding Devices}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Id}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Connect to Selected Device" Clicked="OnConnectButtonClicked"/>
    </StackLayout>

</ContentPage>
